- content_for :head do
  = javascript_include_tag "job_postings/index"
  
- content_for :header do
  #add-a-job
    .price $75 for 30 days
    %a{:href => new_job_posting_path}
      %strong + add
      a job

%ul#category-chooser
  
  %li.all= link_to_active("all jobs", root_path)
  %li.development= link_to_active("development", "/development")
  %li.design= link_to_active("design", "/design")
  %li.copywriting= link_to_active("copywriting", "/copywriting")
  %li.management= link_to_active("management", "/management")
  
  %li.missing= link_to_active("missing one?", "/missing")


#jobs-list

  %header
    %h3 Helping you find a job you'll love!
    .search
      = form_tag 'search' do
        = text_field_tag :query, "", :placeholder => "search..."
        = submit_tag "search"
  
  .filter
    .job_type
      = label_tag :freelancer, "freelancer", :class => "clickable checked", :id => "freelancer"
      = label_tag :employee, "employee", :class => "clickable checked", :id => "employee"
    .payment_type
      = label_tag :hourly, "hourly", :class => "clickable checked", :id => "hourly"
      = label_tag :salary, "salary", :class => "clickable checked", :id => "salary"
    .term
      .min
        at least
        %span#min-value.value
        long
        #min-slider
        = hidden_field_tag :min_slider_preset, session[:min_term]
      .max
        no more than
        %span#max-value.value
        long
        #max-slider
        = hidden_field_tag :max_slider_preset, session[:max_term]
  
  %ul#jobs
    - if @job_postings.empty?
      %li.no-results Sorry, no jobs were found.
    - else
      = render :partial => "job_posting", :collection => @job_postings

  #spinner

= render 'set_filter_values'